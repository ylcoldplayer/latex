% Define a new command to create per-chapter mini-TOCs
\newcommand{\chaptertoc}{%
	\startcontents[chapters]
	\printcontents[chapters]{}{1}{\setcounter{tocdepth}{1}}
	\vspace{0.5cm}
}

\newcommand{\intro}[1]{
	\noindent
	\begin{minipage}[t]{0.48\textwidth}
		\chaptertoc
	\end{minipage}%
	\hfill
	\begin{minipage}[t]{0.48\textwidth}
		#1
	\end{minipage}
	\newpage
}


